FROM golang:1.23.2-alpine AS builder

WORKDIR /app

COPY go.mod ./go.mod

RUN GOOS=linux \
    GOARCH=amd64 \
    go mod download

COPY . .

RUN GOOS=linux \
      GOARCH=amd64 \
      CGO_ENABLED=0 \
      go build \
      -o /app/scrapper \
      ./cmd/scrapper/main.go

FROM alpine:latest

WORKDIR /bin

COPY --from=builder /app/scrapper /bin/scrapper

EXPOSE 8080
ENTRYPOINT ["/bin/scrapper"]